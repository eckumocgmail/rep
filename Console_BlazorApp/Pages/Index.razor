@page "/"
@inject SigninUser signin
@inject NavigationManager nav
@inject IServiceProvider provider
@code
{
    bool IsReady { get; set; } = false;
    TestingReport Report { get; set; }  

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();

        StateHasChanged();

    }


    public async Task<TestingReport> RunTestsAsync()
    {
        await Task.CompletedTask;
        IsReady = false;
        StateHasChanged();
        var unit = new DeliveryServicesUnit(provider);
        this.Report = unit.DoTest(false);
        IsReady = true;
        StateHasChanged();
        return this.Report;
    }
}



<div class="card">
    <div class="card-header">
        
        <button class="btn btn-sm btn-primary" @onclick="RunTestsAsync">run</button>
    </div>
    <div class="card-body">
        @if (IsReady)
        {
            <TestReportView Model="@Report"></TestReportView>
        }
    </div>
    <div class="card-footer"></div>
</div>

