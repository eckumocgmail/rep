@page "/"
@using static NavMenuService;
@inherits BaseComponent
@inject IServiceProvider provider
@inject NavigationManager nav
@inject INavMenuService navMenuService
@inject IInputModalService input
@code
{
    public IEnumerable<NavLinkNavLink> Links { get; set; }


    /// <summary>
    /// 
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        Update();
    }

    public void Update()
    {
        Links = navMenuService.GetPageLinks();
    }

    /// <summary>
    /// /
    /// </summary>
    public async Task OnAddMenuItemClicked(object? evt)
    {
        NavLinkNavLink link = await input.Create<NavLinkNavLink>();
        navMenuService.CreateNavLink(link.Icon, link.Label, link.Href);
        Update();
        StateHasChanged();
    }
}
<CardContainer>
    <CardHeader>
        <ButtonClick OnClick="OnAddMenuItemClicked">Добавить</ButtonClick>
    </CardHeader>
    <CardBody>
 
        <NavModel Links="@Links"></NavModel>
    </CardBody>
    <CardFooter></CardFooter>
</CardContainer>

