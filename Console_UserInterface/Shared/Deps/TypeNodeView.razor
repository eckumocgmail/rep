@typeparam TITem
@if(Item is not null)
{
    <div class="form-check">
        <input class="form-check-input" type="checkbox" checked="@Checked" @onchange="(async evt => { Checked = !Checked; await OnChanged.InvokeAsync(this); StateHasChanged(); })">
        <label class="form-check-label">
            @Item.NodeName
        </label>
    </div>
    @foreach (var p in Item.GetChildren())
    {
        <div style="margin-left: 20px;">
            <TypeNodeView TITem="TITem" Item="@p" OnChanged="OnChangedSubmit"></TypeNodeView>
        </div>
    }
}
else
{
    <div>Не задан параметр Item</div>
}
@code 
{
    [Parameter]
    public TypeNode<TITem> Item { get; set; }  
    [Parameter]
    public bool Checked { get; set; } = true;
    [Parameter]
    public EventCallback<TypeNodeView<TITem>> OnChanged { get; set; }

    public async Task OnChangedSubmit(TypeNodeView<TITem> item)
    {
        await OnChanged.InvokeAsync(item);
    }
}