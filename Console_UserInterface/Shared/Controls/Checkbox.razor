@inherits BaseComponent
<div class="form-check">
    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked="@Checked" @onchange="(evt => { OnChange.InvokeAsync((bool)evt.Value); StateHasChanged(); }  )">
    <label class="form-check-label" for="flexCheckDefault">
        @Label
    </label>
</div>
@code
{
    [Parameter]
    public string Label { get; set; }
    [Parameter]
    public bool Checked { get; set; }
    [Parameter]
    public EventCallback<bool> OnChange { get; set; }
}