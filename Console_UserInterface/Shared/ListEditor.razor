    <CardBody>
        @if (ItemForm is not null)
        {           
            <FormEditor Model="@ItemForm"></FormEditor>
        }
        else
        {
            <CheckList ListItems="ItemList" OnChanged="(evt => { SelectedItems = evt; StateHasChanged(); })"></CheckList>
        }
