@code
{
    [Parameter]
    public RenderFragment Left { get; set; }
    [Parameter]
    public RenderFragment Center { get; set; }
    [Parameter]
    public RenderFragment Right { get; set; }
}
@code
{
    [Parameter]
    public bool ShowLeft { get; set; }
    [Parameter]
    public bool ShowRight { get; set; }
}
<div class="container">
    <div class="row">

        @if (ShowLeft){
            <div class="col-4">@Left</div>
        }

        <div class="col-@GetCols()">
            @Center
        </div>

        @if (ShowRight){
            <div class="col-4">@Right</div>
        }

    </div>
</div>
@functions
{
    public int GetCols()
    {
        int size = 12;
        if (ShowLeft) size -= 4;
        if (ShowRight) size -= 4;
        return size;
    }
}
