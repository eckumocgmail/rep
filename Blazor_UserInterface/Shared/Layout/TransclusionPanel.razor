@inherits BaseComponent
<FlexColumn>
    @Header
    <FlexRow>
        @if(ShowLeft)
        { 
            @Left
        }        
        @ChildContent
        @if(ShowRight)
        { 
            @Right
        }                   
    </FlexRow>
    @Footer
</FlexColumn>
@code {

    [Parameter]
    public bool FullSize { get; set; }

    [Parameter]
    public override RenderFragment ChildContent { get; set; }

    [Parameter]
    public RenderFragment Left { get; set; }
    [Parameter]
    public RenderFragment Right { get; set; }
    [Parameter]
    public RenderFragment Header { get; set; }
    [Parameter]
    public RenderFragment Footer { get; set; }

    [Parameter]
    public bool ShowLeft { get; set; } = true;

    [Parameter]
    public bool ShowRight { get; set; }

    public void OnMouseOutLeftPane()
    {
        ShowLeft = ShowLeft ? false : true;
    }

    public void OnMenuClicked()
    {
        ShowLeft = true;
    }



}
